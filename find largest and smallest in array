public class LargestSmallest {
    public static void main(String[] args) {
        int[] arr = {12, 5, 8, 21, 4};
        int largest = arr[0];
        int smallest = arr[0];

        for (int n : arr) {
            if (n > largest) largest = n;
            if (n < smallest) smallest = n;
        }

        System.out.println("Largest: " + largest);
        System.out.println("Smallest: " + smallest);
    }
}
