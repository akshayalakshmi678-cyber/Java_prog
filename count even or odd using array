public class CountEvenOdd {
    public static void main(String[] args) {
        int[] arr = {1, 4, 7, 2, 9};
        int even = 0, odd = 0;

        for (int a : arr) {
            if (a % 2 == 0) even++;
            else odd++;
        }

        System.out.println("Even = " + even + ", Odd = " + odd);
    }
}
